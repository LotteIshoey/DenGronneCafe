<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lotte.dengronnecafe.Start"
    android:background="@drawable/backgroundcafe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">

        <Button
            style="@style/buttonStartBig"
            android:text="@string/start_menu"
            android:onClick="click_menu"
            android:layout_marginRight="25dp"/>

        <Button
            style="@style/buttonStartBig"
            android:text="@string/start_profile"
            android:onClick="click_profilemember"
            />
    </LinearLayout>

    <Button
        style="@style/buttonStartBig"
        android:text="Dessert"
        android:onClick="click_dessert"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:layout_marginTop="130dp"
        android:id="@+id/startvelkommen1"
        style="@style/textHeadline"
        android:text="@string/start_text1"
        />
    <TextView
        android:id="@+id/startvelkommen2"
        style="@style/textHeadline"
        android:text="@string/start_text2"
        android:layout_below="@id/startvelkommen1"
        android:textColor="#489342" />

    <LinearLayout
        android:id="@+id/botton_alignment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/start_about"
            style="@style/Startbutton"
            android:text="@string/start_about"
            android:onClick="click_about"
/>
        <Button
            android:id="@+id/start_map"
            style="@style/Startbutton"
            android:text="@string/start_map"
            android:onClick="click_find"
            />
        <Button
            android:id="@+id/start_contact"
            style="@style/Startbutton"
            android:text="@string/start_contact"
            android:onClick="click_contact"
            />
        <Button
            android:id="@+id/start_test"
            style="@style/Startbutton"
            android:text="@string/start_test"
            android:onClick="click_music"
            />

    </LinearLayout>
</RelativeLayout>
