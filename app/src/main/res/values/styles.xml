<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="textHeadline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">55sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#463434</item>
    </style>

    <style name="buttonStartBig">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#463434</item>
        <item name="android:background">@color/buttongreen</item>
    </style>

    <style name="Startbutton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/buttongreen</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="simpletext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>


</resources>
